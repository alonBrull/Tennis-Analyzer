<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_card_hight"
    android:layout_margin="4dp"
    android:orientation="horizontal"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/card_pretty_background"/>

    <RelativeLayout
        android:id="@+id/cardview_RLY_sessionData"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/cardview_LY_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardview_TXT_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_text"
                android:text="date" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardview_LY_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/cardview_margin_horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/cardview_TXT_swingMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_text"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cardview_TXT_swingAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_text"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cardview_TXT_swingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_text"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cardview_TXT_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_text"
                android:layout_weight="1" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>